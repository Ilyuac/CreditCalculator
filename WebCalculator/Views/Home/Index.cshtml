@model WebCalculator.Models.Credit

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>

    <h4>Кредитный калькулятор</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Index">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Sum" class="control-label">Сумма кредита:</label>
                    <input asp-for="Sum" class="form-control" />
                    <span asp-validation-for="Sum" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Time" class="control-label">Срок кредита:</label>
                    <input asp-for="Time" class="form-control" />
                    <span asp-validation-for="Time" class="text-danger"></span>
                
                    <select id="SelectTime" class="form-group">
                        <option>@ViewBag.Month</option>
                        <option>@ViewBag.Day</option>
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="Rate" class="control-label">Ставка:</label>
                    <input asp-for="Rate" class="form-control" />
                    <span asp-validation-for="Rate" class="text-danger"></span>
                
                    <select id="SelectRate" class="form-group">
                        <option>@ViewBag.Years</option>
                        <option>@ViewBag.Days</option>
                    </select>
                </div>

                <div>
                    <label class="control-label">Шаг платежа в днях:</label>
                    <select id="SelectPayment" class="form-group">
                        <option>@ViewBag.Everymonth</option>
                        <option>@ViewBag.TenDay</option>
                        <option>@ViewBag.FiftenDay</option>
                        @for (int i = 0; i <= 30; i++)
                        {
                            <option>@i</option>
                        }
                    </select>
                </div>

                <div class="form-group">
                    <input type="submit" value="Расчитать" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>